<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('head') %> 
   <link rel="stylesheet" href="/styles/editBookStyle.css">
</head>
<body>
    <%- include('navbar') %> 

    <main>
        <form action="/editBook/<%= book._id %> " method="post" class="form-position">
            <div class="form-control">
              <label for="title">Title</label>
              <input type="text" id="title" name="title" value="<%= book.title %>" required>
            </div>
            <div class="form-control">
              <label for="summary">Summary</label>
              <input type="text" id="summary" name="summary" value="<%= book.summary %>" required maxlength="255">
            </div>
            <div class="form-control">
                <label for="author">Author</label>
                <input type="text" id="title" name="author" value="<%= book.name %>"  required>
              </div>
            
            <div class="form-control">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="<%= book.email %>"  required>
              </div>
            
            </div >
            <div class="btnStyle">
                <button type="submit" class="btn btn-primary" name="submit" >Add Changes</button>
            </div>  
        </form>
    </main>
    
</body>
</html>